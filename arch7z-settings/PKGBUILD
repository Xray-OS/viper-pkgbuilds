# Maintainer: Angel Gustavo ada_os@proton.me
pkgname=arch7z-settings
_pkgname=arch7z-settings
_destname1="/etc"
_destname2="/usr"
# _licensedir="/usr/share/xray_os/licenses/"
pkgver=2
pkgrel=3
pkgdesc="Configuration files and automated-scripts for Arch7z/Xray_OS"
arch=('x86_64')
url="https://gitlab.com/Arch7z/$_pkgname"
license=('GPL3')
makedepends=('git')
depends=()
conflicts=('xeroarch-system-config-git' 'xray-settings')
#backup=('')
provides=("${pkgname}")
options=( !strip !emptydirs )
source=(${pkgname}::"git+https://gitlab.com/Arch7z/${_pkgname}")
sha256sums=('SKIP')
install='readme.install'
package() {
  install -dm755 "$pkgdir$_destname1"
  cp -r "$srcdir/$pkgname/$_destname1/"* "$pkgdir/$_destname1"

  install -dm755 "$pkgdir$_destname2"
  cp -r "$srcdir/$pkgname/$_destname2/"* "$pkgdir/$_destname2"
}
