pkgname=arch7z-installation-config
_pkgname=arch7z-installation-config
_destname="/usr/local/bin/"
#_licensedir="/usr/share/arch/licenses/"
pkgver=2
pkgrel=2
pkgdesc="Installation files and script for the Arch7z/Xray_OS installation"
arch=('any')
url="https://gitlab.com/arch7z/$_pkgname"
license=('GPL3')
makedepends=('git')
depends=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${pkgname}::"git+https://gitlab.com/Arch7z/${_pkgname}") #STABLE
# source=(${pkgname}::"git+https://gitlab.com/Arch7z/${_pkgname}#branch=alpha-features")
sha256sums=('SKIP')
install="readme.install"
package() {

  install -dm755 "$pkgdir$_destname"
  cp -r "$srcdir/$pkgname/$_destname/"* "$pkgdir/$_destname"

#   install -dm755 "$pkgdir$_destname2"
#   cp -r "$srcdir/$pkgname/$_destname2/"* "$pkgdir/$_destname2"
}
