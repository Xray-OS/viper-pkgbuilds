pkgname=xray-liquid-boot-splash
_pkgname=xray-liquid-boot-splash
_destname="/usr"
# _licensedir="/usr/share/xray_os/licenses/"
pkgver=1
pkgrel=2
pkgdesc="Xray liquid boot-splash-screen for Arch7z/Xray_OS"
arch=('x86_64')
url="https://gitlab.com/xrayos/$_pkgname"
license=('GPL3')
makedepends=('git')
depends=()
conflicts=('xeroarch-system-config-git' 'xray-settings')
#backup=('')
provides=("${pkgname}")
options=( !strip !emptydirs )
source=(${pkgname}::"git+https://gitlab.com/xrayos/${_pkgname}")
sha256sums=('SKIP')
install='readme.install'
package() {
  install -dm755 "$pkgdir$_destname"
  cp -r "$srcdir/$pkgname/$_destname/"* "$pkgdir/$_destname"
}
