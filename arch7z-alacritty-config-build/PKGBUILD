pkgname=arch7z-alacritty-config
_pkgname=arch7z-alacritty-config
_destname="/etc"
pkgver=1
pkgrel=2
pkgdesc="Alacritty configuration for Arch"
arch=('x86_64')
url="https://gitlab.com/Arch7z/$_pkgname"
license=('GPL3')
makedepends=('git')
depends=()
#conflicts=('')
provides=("${pkgname}")
options=( !strip !emptydirs )
source=(${pkgname}::"git+https://gitlab.com/Arch7z/${_pkgname}")
sha256sums=('SKIP')
package() {
  install -dm755 "$pkgdir$_destname"
  cp -r "$srcdir/$pkgname/$_destname/"* "$pkgdir/$_destname"
}
